<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.Toolbar
        app:title="Tính toán"
        app:titleTextColor="#8431FA"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"/>
        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:weightSum="6"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/box_linear1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <TextView
                            android:layout_marginBottom="20dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:textColor="@color/text"
                            android:gravity="center|top"
                            android:textSize="17sp"
                            android:text="Cộng trừ trong phạm vi:"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/tvPhamVi"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/box_purple_bottom"
                            android:textStyle="bold"
                            android:textColor="@color/text"
                            android:gravity="center"
                            android:textSize="17sp"
                            android:text="100"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:weightSum="9"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <TextView
                            android:layout_weight="3"
                            android:textStyle="bold"
                            android:textColor="@color/text"
                            android:gravity="center"
                            android:textSize="17sp"
                            android:text="Chọn bài:"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <LinearLayout
                            android:weightSum="6"
                            android:layout_weight="6"
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/tvcbTinhToan"
                                android:background="@drawable/box_purple_custom_left"
                                android:layout_weight="2"
                                android:textColor="@color/text"
                                android:gravity="center"
                                android:textSize="15sp"
                                android:text="Tính toán"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/tvcbDien1"
                                android:textColor="#7713FD"
                                android:background="#fff"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:textSize="15sp"
                                android:text="Điền số 1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/tvcbDien2"
                                android:focusable="true"
                                android:layout_weight="2"
                                android:textColor="#7713FD"
                                android:background="@drawable/box_while_custom_right"
                                android:gravity="center"
                                android:textSize="15sp"
                                android:text="Điền số 2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:weightSum="9"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <TextView
                            android:layout_weight="3"
                            android:textStyle="bold"
                            android:textColor="@color/text"
                            android:gravity="center"
                            android:textSize="17sp"
                            android:text="Phép tính:"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <LinearLayout
                            android:background="@drawable/box_purple"
                            android:layout_weight="6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <Spinner
                                android:paddingLeft="10dp"
                                android:id="@+id/spinerPhepTinh"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <TextView
                            android:textSize="20sp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:id="@+id/tvChonDuLieu"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:background="@drawable/box_purple"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/text"
                            android:text="Bắt đầu"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>
                //mieng2
                <LinearLayout
                    android:padding="10dp"
                    android:weightSum="8"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/box_linear2"
                    android:layout_width="match_parent"
                    android:layout_height="90dp">
                    <TextView
                        android:id="@+id/tvSoThu1"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="@color/text"
                        android:textSize="45sp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/tvPhepTinh"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="+"
                        android:textColor="@color/text"
                        android:textSize="45sp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/tvSoThu2"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="0"
                        android:textColor="@color/text"
                        android:textSize="45sp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:gravity="center_vertical|center_horizontal"
                        android:text="="
                        android:textStyle="bold"
                        android:textColor="@color/text"
                        android:textSize="45sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:text="999"
                        android:id="@+id/tvSoThu3"
                        android:gravity="center_vertical|center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/text"
                        android:textSize="45sp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/btn_number1_ok"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                </LinearLayout>
                //mieng 3 clone
                <LinearLayout
                    android:paddingRight="25dp"
                    android:paddingLeft="25dp"
                    android:paddingTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:weightSum="4"
                    android:orientation="vertical"
                    android:background="@drawable/box_while"
                    android:layout_width="match_parent"
                    android:layout_height="320dp">
                    <LinearLayout
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:weightSum="3"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <LinearLayout
                            android:gravity="left"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="70dp">
                            <TextView
                                android:id="@+id/btnso7"
                                android:gravity="center_horizontal|center_vertical"
                                android:background="@drawable/btn_number"
                                android:textColor="@color/text"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:text="7"
                                android:layout_width="60dp"
                                android:layout_height="60dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center|top"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="70dp">
                            <TextView
                                android:id="@+id/btnso8"
                                android:gravity="center_horizontal|center_vertical"
                                android:background="@drawable/btn_number"
                                android:textColor="@color/text"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:text="8"
                                android:layout_width="60dp"
                                android:layout_height="60dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="right"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="70dp">
                            <TextView
                                android:id="@+id/btnso9"
                                android:gravity="center"
                                android:background="@drawable/btn_number"
                                android:textColor="@color/text"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:text="9"
                                android:layout_width="60dp"
                                android:layout_height="60dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:weightSum="3"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <LinearLayout
                            android:gravity="left"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="70dp">
                            <TextView
                                android:id="@+id/btnso6"
                                android:gravity="center_horizontal|center_vertical"
                                android:background="@drawable/btn_number"
                                android:textColor="@color/text"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:text="6"
                                android:layout_width="60dp"
                                android:layout_height="60dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center|top"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="70dp">
                            <TextView
                                android:id="@+id/btnso5"
                                android:gravity="center_horizontal|center_vertical"
                                android:background="@drawable/btn_number"
                                android:textColor="@color/text"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:text="5"
                                android:layout_width="60dp"
                                android:layout_height="60dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="right"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="70dp">
                            <TextView
                                android:id="@+id/btnso4"
                                android:gravity="center"
                                android:background="@drawable/btn_number"
                                android:textColor="@color/text"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:text="4"
                                android:layout_width="60dp"
                                android:layout_height="60dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:weightSum="3"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <LinearLayout
                            android:gravity="left"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="70dp">
                            <TextView
                                android:id="@+id/btnso1"
                                android:gravity="center_horizontal|center_vertical"
                                android:background="@drawable/btn_number"
                                android:textColor="@color/text"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:text="1"
                                android:layout_width="60dp"
                                android:layout_height="60dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center|top"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="70dp">
                            <TextView
                                android:id="@+id/btnso2"
                                android:gravity="center_horizontal|center_vertical"
                                android:background="@drawable/btn_number"
                                android:textColor="@color/text"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:text="2"
                                android:layout_width="60dp"
                                android:layout_height="60dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="right"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="70dp">
                            <TextView
                                android:id="@+id/btnso3"
                                android:gravity="center"
                                android:background="@drawable/btn_number"
                                android:textColor="@color/text"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:text="3"
                                android:layout_width="60dp"
                                android:layout_height="60dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:weightSum="3"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <LinearLayout
                            android:gravity="left"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="70dp">
                            <TextView
                                android:id="@+id/btnC"
                                android:gravity="center_horizontal|center_vertical"
                                android:background="@drawable/btn_number_del"
                                android:textColor="@color/text"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:text="C"
                                android:layout_width="60dp"
                                android:layout_height="60dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center|top"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="70dp">
                            <TextView
                                android:id="@+id/btnso0"
                                android:gravity="center_horizontal|center_vertical"
                                android:background="@drawable/btn_number"
                                android:textColor="@color/text"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:text="0"
                                android:layout_width="60dp"
                                android:layout_height="60dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="right"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="70dp">
                            <LinearLayout
                                android:id="@+id/btnOk"
                                android:gravity="center"
                                android:background="@drawable/btn_number1_ok"
                                android:layout_width="60dp"
                                android:layout_height="60dp">
                                <ImageView
                                    android:src="@drawable/ic_check_24dp"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                //mieng4
                <LinearLayout
                    android:background="@drawable/box_linear1"
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <TextView
                        android:id="@+id/tvCheckFinal"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textColor="@color/text"
                        android:gravity="center"
                        android:text="@string/result_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
</LinearLayout>